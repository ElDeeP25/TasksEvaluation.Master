@using Microsoft.AspNetCore.Identity
@using TasksEvaluation.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TasksEvaluation</title>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/footer.css" rel="stylesheet" />

    @RenderSection("Styles", required: false)
    <style>
        /* Home Page Styles */
        .hero1 {
            position: relative;
            background-image: url('/guy-lecture.jpg');
            background-size: cover; /* Ensure the image covers the entire area */
            background-position: center; /* Center the image */
            background-repeat: no-repeat; /* Prevent tiling */
            color: white; /* Adjust text color if necessary */
            text-align: center;
            padding: 60px 20px; /* Adjust padding for spacing */
            height: 100vh; /* Make the hero section full height of the viewport */
            display: flex; /* Use Flexbox for centering */
            align-items: center; /* Vertically center the content */
            justify-content: center; /* Horizontally center the content */
        }

        .user-info .welcome {
            font-size: 0.875rem; /* Adjust font size if necessary */
            color: #f8f9fa; /* Light color for text */
            margin-bottom: 0.25rem; /* Space between welcome and username */
            text-align:center;
        }

            .hero1::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5); /* Optional: dark overlay for better text visibility */
                z-index: 1;
            }

            .hero1 > div {
                position: relative;
                z-index: 2; /* Ensure content is above the overlay */
            }

            .hero1 h1 {
                font-size: 3rem; /* Increase the font size of the heading */
                margin-bottom: 20px; /* Add margin below the heading */
            }

            .hero1 p {
                font-size: 1.25rem; /* Increase the font size of the paragraph */
                line-height: 1.5; /* Adjust line height for better readability */
                margin-bottom: 20px; /* Add margin below the paragraph */
            }

        .features {
            padding: 40px 20px;
        }

        .feature-item {
            text-align: center;
        }

            .feature-item img {
                max-width: 100%;
                height: auto;
                margin-bottom: 15px;
            }

        
    </style>
</head>
<body class="@ViewData["BodyClass"]">

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">
            <i class="fa-solid fa-cogs fa-2x"></i>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Student" asp-action="Index">Student</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Assignment" asp-action="Index">Assignment</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Solution" asp-action="Index">Solution</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Course" asp-action="Index">Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Add Admin</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="StudentSolution" asp-action="Index">Assignments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="EvaluatedAssignment" asp-action="Index">Evaluated Assignments</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="CourseStd" asp-action="Index">Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="StudentSolution" asp-action="LogIn">LogIn As Student</a>
                    </li>
                }
            </ul>
            <ul class="navbar-nav ms-auto">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <div class="user-info text-light me-3">
                            <div class="welcome">Welcome</div>
                            <div class="username">@UserManager.GetUserName(User)</div>
                        </div>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Account" asp-action="Logout" method="post" class="nav-link m-0 p-0">
                            <button type="submit" class="btn btn-link text-light">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-light custom-btn" asp-area="" asp-controller="Account" asp-action="Login">Administration</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="content">
        @RenderBody()
        <partial name="_FooterPartial" />
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
