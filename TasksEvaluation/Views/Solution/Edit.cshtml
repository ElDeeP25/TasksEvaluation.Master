@model TasksEvaluation.Core.DTOs.SolutionDTO

<div class="container mt-4">
    <h2>Edit Solution</h2>

    <form asp-action="Edit" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <!-- Hidden fields for StudentId, AssignmentId, and SolutionFile -->
        <input type="hidden" asp-for="StudentId" />
        <input type="hidden" asp-for="AssignmentId" />
        <input type="hidden" asp-for="SolutionFile" />

        <div class="form-group">
            <label asp-for="Notes" class="form-label">Notes</label>
            <textarea asp-for="Notes" class="form-control" placeholder="Enter notes" rows="4"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GradeId" class="form-label">Grade</label>
            <select asp-for="GradeId" asp-items="ViewBag.Grades" class="form-control">
                <option value="">Select a grade</option>
            </select>
            <span asp-validation-for="GradeId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </form>
</div>
