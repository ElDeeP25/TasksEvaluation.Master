@model TasksEvaluation.Core.DTOs.SolutionDTO

<div class="container mt-4">
    <h2>Edit Solution</h2>

    <form asp-action="Edit" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="SolutionFile" class="form-label">Solution File</label>
            <input asp-for="SolutionFile" type="file" class="form-control" />
            <span asp-validation-for="SolutionFile" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Notes" class="form-label"></label>
            <textarea asp-for="Notes" class="form-control" placeholder="Enter notes" rows="4"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GradeId" class="form-label"></label>
            <input asp-for="GradeId" class="form-control" />
            <span asp-validation-for="GradeId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StudentId" class="form-label"></label>
            <input asp-for="StudentId" class="form-control" />
            <span asp-validation-for="StudentId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="AssignmentId" class="form-label"></label>
            <input asp-for="AssignmentId" class="form-control" />
            <span asp-validation-for="AssignmentId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </form>
</div>
