@model IEnumerable<TasksEvaluation.Core.DTOs.SolutionStudentDTO>

<div class="container mt-5 p-4 shadow-lg rounded bg-light">
    <h2 class="text-center mb-4">Solutions</h2>
    <div class="text-end mb-3">
        <a href="@Url.Action("Create")" class="btn btn-primary">Create New Solution</a>
    </div>
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">File</th>
                <th scope="col">Notes</th>
                <th scope="col">Grade</th>
                <th scope="col">Student</th>
                <th scope="col">Assignment</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var solution in Model)
            {
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img width="70px" src="/img/@solution.SolutionFile" alt="Solution File" class="me-2" />
                            <a href="/img/@solution.SolutionFile" download class="download-logo">
                                <i class="fas fa-download"></i>
                            </a>
                        </div>
                    </td>
                    <td>@solution.Notes</td>
                    <td>@solution.GardeName</td>
                    <td>@solution.StudentName</td>
                    <td>@solution.AssignmentTitle</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = solution.Id })" class="btn btn-warning btn-sm me-2">Edit</a>
                        <a href="@Url.Action("Delete", new { id = solution.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* CSS لتحسين تنسيق الشعار والـ div */
    .container {
        background-color: #f8f9fa; /* لون خلفية خفيف */
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .download-logo {
        color: #28a745; /* اللون الأخضر */
        font-size: 24px; /* حجم الأيقونة */
        text-decoration: none;
        transition: transform 0.2s ease, color 0.2s ease;
    }

        .download-logo:hover {
            color: #218838; /* لون أخضر أغمق عند التمرير */
            transform: scale(1.2); /* تكبير عند التمرير */
        }
</style>

