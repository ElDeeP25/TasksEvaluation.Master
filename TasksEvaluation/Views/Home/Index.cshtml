@{
    ViewData["BodyClass"] = "home-page";
}
<style>
    .hero1 {
        position: relative;
        background-image: url('/guy-lecture.jpg');
        background-size: cover; /* Ensure the image covers the entire area */
        background-position: center; /* Center the image */
        background-repeat: no-repeat; /* Prevent tiling */
        color: #fff; /* Set text color to white for better contrast */
        text-align: center;
        padding: 60px 20px; /* Adjust padding for spacing */
        height: 100vh; /* Make the hero section full height of the viewport */
        display: flex; /* Use Flexbox for centering */
        align-items: center; /* Vertically center the content */
        justify-content: center; /* Horizontally center the content */
        transition: color 0.3s ease-in-out; /* Add smooth transition for color changes */
    }

        .hero1::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5); /* Optional: dark overlay for better text visibility */
            z-index: 1;
        }

        .hero1 > div {
            position: relative;
            z-index: 2; /* Ensure content is above the overlay */
        }

        .hero1 h1,
        .hero1 p {
            color: #f0f0f0; /* Light grey color for text */
            transition: color 0.3s ease-in-out; /* Smooth transition for color change on hover */
        }

            .hero1 h1:hover,
            .hero1 p:hover {
                color: #ffeb3b; /* Change text color to yellow on hover */
            }

    .features {
        padding: 40px 20px;
    }

    .feature-item {
        text-align: center;
    }

        .feature-item img {
            max-width: 100%;
            height: auto;
            margin-bottom: 15px;
            transition: transform 0.3s ease-in-out; /* Transition for smooth scaling */
        }

            .feature-item img:hover {
                transform: scale(1.05); /* Slightly enlarge the image on hover */
            }


        .feature-item img {
            max-width: 100%;
            height: auto;
            margin-bottom: 15px;
        }

        .feature-item h3,
        .feature-item p {
            color: #333; /* Default text color for feature items */
            transition: color 0.3s ease-in-out, transform 0.3s ease-in-out; /* Transition for color and transform on hover */
        }

            .feature-item h3:hover,
            .feature-item p:hover {
                color: #007bff; /* Change text color to blue on hover */
                transform: scale(1.05); /* Slightly enlarge text on hover */
            }
</style>

<div class="hero1">
    <div>
        <h1>Welcome to Our Course Platform</h1>
        <p>Explore a variety of courses designed to help you achieve your educational goals. Learn at your own pace and enhance your skills with expert instructors.</p>
    </div>
</div>

<div class="features container">
    <h2 style="text-align:center; color:black"  >Why Choose Our Platform?</h2>
    <div class="row">
        <div class="col-md-4 feature-item">
            <img src="~/young-female-writing-textbook-library.jpg" alt="High-Quality Courses">
            <h3>High-Quality Courses</h3>
            <p>Our courses are crafted by industry experts to ensure you get the best learning experience.</p>
        </div>
        <div class="col-md-4 feature-item">
            <img src="~/student-online-young-cute-girl-glasses-orange-sweater-studying-computer-showing-zen-sign.jpg" alt="Flexible Learning">
            <h3>Flexible Learning</h3>
            <p>Learn at your own pace with our flexible course schedules and self-paced learning options.</p>
        </div>
        <div class="col-md-4 feature-item">
            <img src="~/close-up-colleagues-learning-job.jpg" alt="Expert Instructors">
            <h3>Expert Instructors</h3>
            <p>Our instructors are professionals in their fields, ready to guide you through every step of the way.</p>
        </div>
    </div>
</div>
