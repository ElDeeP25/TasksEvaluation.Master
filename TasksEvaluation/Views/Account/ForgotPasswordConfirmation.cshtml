@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <style>
        body {
            background: #222D32;
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
        }

        .confirmation-box {
            margin-top: 75px;
            background: #1A2226;
            text-align: center;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
            border-radius: 10px;
            padding: 40px;
            color: #ECF0F5;
        }

        .confirmation-icon {
            height: 100px;
            font-size: 80px;
            line-height: 100px;
            color: #27EF9F; /* لون مميز لأيقونة الصح */
        }

        .confirmation-title {
            margin-top: 15px;
            font-size: 30px;
            letter-spacing: 2px;
            font-weight: bold;
            color: #ECF0F5;
        }

        .confirmation-text {
            font-size: 18px;
            color: #ECF0F5;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <section class="confirmation-box">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                    <div class="text-center mb-4">
                        <div class="confirmation-icon">
                            <i class="fa fa-check-circle" aria-hidden="true"></i>
                        </div>
                    </div>
                    <h4 class="confirmation-title">Check your email</h4>
                    <h2 class="confirmation-title">Password Reset Link Sent</h2>
                    <p class="confirmation-text">We have sent a password reset link to your email. Please check your inbox and follow the instructions to reset your password.</p>
                </div>
            </div>
        </div>
    </section>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
