@model TasksEvaluation.Core.DTOs.AssignmentDTO

@{
    var isEdit = Model?.Id > 0;
}

<div class="container mt-4">
    <h2 class="mb-4">@(isEdit ? "Edit Assignment" : "Create Assignment")</h2>

    <form asp-action="@(isEdit ? "Edit" : "Create")" method="post" class="form-horizontal">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter description" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DeadLine" class="form-label">Deadline</label>
            <input asp-for="DeadLine" type="date" class="form-control" />
            <span asp-validation-for="DeadLine" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GroupId" class="form-label">Group</label>
            <select asp-for="GroupId" class="form-control" asp-items="ViewBag.Groups">
                <option value="">Select a group</option>
            </select>
            <span asp-validation-for="GroupId" class="text-danger"></span>
        </div>

        <div class="form-group mt-4">
            <button type="submit" class="btn btn-primary">@((isEdit ? "Save Changes" : "Create Assignment"))</button>

                    <a href="@Url.Action("Index")" class="btn btn-secondary ms-2">Back to List</a>
        </div>
    </form>
</div>
